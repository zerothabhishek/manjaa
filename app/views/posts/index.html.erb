<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Permalink</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.permalink %></td>
    <td><%= post.tags %></td>
    <td><%= link_to 'Show', site_post_path(@site, post) %></td>
    <td><%= link_to 'Edit', edit_site_post_path(@site, post) %></td>
    <td><%= link_to 'Destroy', site_post_path(@site, post), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_site_post_path(@site) %>
